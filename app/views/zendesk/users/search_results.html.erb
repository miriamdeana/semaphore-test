<% if users_found.empty? %>
  <h1>No users with <%= search_param %></h1>
<% else %>
  <h1>Users with <%= search_param %></h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <% users_found.each do |user| %>
         <tr>
          <td><a href="#"><%= user["name"] %></a></td>
          <td><%= user["email"] %></td>
          <td><%= user["phone"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>