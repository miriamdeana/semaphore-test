<div class='container'>
  <h1>New Ticket</h1>

  <%= form_with url: '/zendesk/tickets/create', method: 'post', class: 'form-horizontal', local: true do |form| %>
    <div class='form-group'>
      <%= form.label :subject, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :subject, readonly: true, class: 'form-control', value: 'Phone Call Ticket' %>
      </div>
    </div>
    <div class='form-group'>
      <%= form.label :description, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= form.text_area :description, class: 'form-control', rows: '6' %>
      </div>
    </div>
    <%= form.submit 'Create New Ticket', name: nil, class: 'btn btn-primary', style: 'float: right;'%>
  <% end %>
</div>

